{
  "name": "taplock-worker",
  "version": "1.0.0",
  "description": "TapLock - Passkey-powered secret manager backend",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/server.ts",
    "d1:create": "wrangler d1 create taplock-db",
    "d1:create:preview": "wrangler d1 create taplock-db-preview",
    "d1:migrate:local": "wrangler d1 migrations apply taplock-db --local",
    "d1:migrate:remote": "wrangler d1 migrations apply taplock-db --remote",
    "d1:migrate:preview": "wrangler d1 migrations apply taplock-db-preview --remote --env preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@simplewebauthn/server": "^10.0.1",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "wrangler": "^4.54.0"
  }
}
